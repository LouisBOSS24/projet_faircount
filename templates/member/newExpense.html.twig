{% extends "layout.html.twig" %}

{% block header %}
    {% include "partials/_header.html.twig" %}
{% endblock %}

{% block main %}
    <main>
        {% if missingField is defined and missingField.0 %}  {#'is devined and' généré par Github Copilot, Prompt : "pourquoi plus rien ne s'affiche j'ai une page blanche..."#}
            <h4>{{ missingField.0 }}</h4>
        {% endif %}
        <h1>Ajouter une dépense</h1>
        <form method="post" action="index.php?route=newExpense">
            <fieldset>
                <label for="title">Nom de la dépense</label>
                <input type="text" name="title" id="title" required>
            </fieldset>

            <fieldset>
                {% if wrongAmount is defined and wrongAmount.0 %} {#'is devined and' généré par Github Copilot, Prompt : "pourquoi plus rien ne s'affiche j'ai une page blanche..."#}
                    <h4>{{ wrongAmount.0 }}</h4>
                {% endif %}
                <label for="amount">Prix</label>
                <input type="number" step="0.01" name="amount" id="amount" required>
            </fieldset>

            <fieldset>
                <label for="category">Choisis une catégorie :</label>
                <select name="category" id="category" required>
                    <option value="">-- Choisir --</option>
                    <option value="1">Transport</option>
                    <option value="2">Logement</option>
                    <option value="3">Nourriture</option>
                    <option value="4">Sorties</option>
                </select>
            </fieldset>

            <button type="submit">Valider</button>
        </form>
    </main>
{% endblock %}